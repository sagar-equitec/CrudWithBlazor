@page "/adduser"
@using UserManagement.Models
@using UserManagement.Data
@inject IJSRuntime JSRuntime
@inject UserService userService
@inject NavigationManager NavigationManager
<link href="./css/css/customize-style.css" rel="stylesheet" />

<h1 class="colorBlue">
    Add User
</h1>

<EditForm Model="_user" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />

    <ul class="row forumBox">
        <li class="col-3 required">
            <label class="inputLabel">Name</label>
        </li>
        <li class="col-3">
            <div class="form_inputBox">
                <InputText @bind-Value="_user.Name" class="form-control" />
            </div>
            <div class="erroeText">
                <ValidationMessage For="(() => _user.Name)"></ValidationMessage>
            </div>
        </li>
        <li class="col-6">

        </li>

        <li class="col-3 required">
            <label class="inputLabel">Designation</label>
        </li>
        <li class="col-3">
            <div class="form_inputBox">
                <InputText @bind-Value="_user.Designation" class="form-control" />
            </div>
            <div class="erroeText">
                <ValidationMessage For="(() => _user.Designation)"></ValidationMessage>
            </div>
        </li>
        <li class="col-6">

        </li>
        <li class="col-3 required">
            <label class="inputLabel">City</label>
        </li>
        <li class="col-3">
            <div class="form_inputBox">
                <InputText @bind-Value="_user.City" class="form-control" />
            </div>
            <div class="erroeText">
                <ValidationMessage For="(() => _user.City)"></ValidationMessage>
            </div>
        </li>
        <li class="col-6"></li>
        <li class="col-3">
            <div class="form-group">
                <div class="form_inputBox">
                    <label for="Skills">Skills:</label>
                </div>
                
            </div>
        </li>
        <li class="col-3">
            <div class="form-group">
                <div class="form_inputBox">
                    <div class="d-flex">
                        @foreach (var skill in skillList)
                        {
                            <div class="radio_check d-flex align_center">
                                <input type="checkbox" class="form-check-input" @onclick="() => ToggleSkill(skill.SkillId)" />

                                <div class="pb-3">
                                    <label class="inputLabel">
                                        @skill.SkillName
                                    </label>
                                </div>

                            </div>
                        }
                    </div>
                    <div class="errorText" style="display:@status">
                        <ValidationMessage For="(() => _user.Error)"></ValidationMessage>
                    </div>
                </div>
                
            </div>
        </li>

        <li class="col-12 mt_20">
            <div class="form_btns">
                <button type="submit" class="common_btn btnBlue">Save</button>
               <button type="reset" class="common_btn btnGry" @onclick="OnResetClicked">Reset</button>
                <button type="button" class="common_btn btnWhite" @onclick="OnCancelClicked">Cancel</button>
            </div>
        </li>
    </ul>
</EditForm>


