
@page "/fetchuser"

<title>User</title>

@using UserManagement.Models
@using UserManagement.Data
@inject NavigationManager NavigationManager
@inject UserService userService
<style>
    .name-hover:hover {
        color: green; /* Change this to the desired hover color */
        cursor: pointer;
    }
     .center-text {
        text-align: center;
    }
</style>

<h1>User List</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (Users == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>City</th>
                <th>Designation</th>
                <th>Skills</th>
                    <th class="center-text">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Users)
            {
                <tr >
                    <td @onclick="() => GetUser(user.UserId)" class="name-hover">@user.UserName</td>
                    <td>@user.UserCity</td>
                    <td>@user.UserDesignation</td>
                    <td>@empSkillsDictionary[user.UserId]</td>
                  
                            <td class="center-text">

                        <button class="btn btn-danger" @onclick="() => DeleteUser(user.UserId)">Delete</button>

                        <button class="btn btn-primary" @onclick="() => UpdateUser(user.UserId)">Update</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


